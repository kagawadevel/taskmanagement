<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
  <h2><%= @task.errors.count %>件のエラーがあります。</h2>

  <ul>
  <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  </div>
  <% end %>

  <div>
    <%= form.label :タスク名 %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :タスク詳細 %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :終了期限 %>
    <%= form.date_field :limit %>
  </div>

  <div>
    <%= form.label :ステータス %><br>
    <%= form.select :status, [["未着手",'未着手'], ["着手済み", '着手済み'], ["完了", '完了']]%>
  </div>

  <div>
    <%= form.label :優先順位 %><br>
    <%= form.select :priority, Task.priorities.keys.to_a, {} %>
  </div>


  <%= form.submit %>
<% end %>
<br>

  <%= link_to "タスク一覧画面にもどる", tasks_path %>
