<!DOCTYPE html>
<html>
  <head>
    <title>Taskmanagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 rounded-bottom">
        <%= link_to 'タスク一覧', tasks_path,class: 'navbar-brand' %>
        <div class="collapse navbar-collapse" id="Navbar">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to "タスク作成", new_task_path ,class: 'nav-link' %></li>
              <li class="nav-item">
                <%= link_to "ユーザー作成", new_user_path ,class: 'nav-link'  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_session_path ,class: 'nav-link'  %>
              </li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
